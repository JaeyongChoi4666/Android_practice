<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CloseViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/basegreen">

        <ImageView
            android:id="@+id/topBanner"
            android:layout_width="187dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/council" />
    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:srcCompat="@drawable/seperateline" />

    <TextView
        android:id="@+id/electionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021학년도 학생회장 선거"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_margin="5dp" />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:id="@+id/viewPagerClose"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/basegreen"
            android:layout_marginRight="30dp"
            android:text="뒤로가기" />

    </LinearLayout>

</LinearLayout>